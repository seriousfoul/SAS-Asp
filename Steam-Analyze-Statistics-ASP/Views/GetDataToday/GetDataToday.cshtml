@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<GetData>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "遊戲統計與圖表 - 每日遊戲排名";
}


<div id="content">
    @if (Model.Count > 0)
    {
        @foreach (GetData row in Model)
        {
            <div class="gamePic">
                <img src="@row.image">
            </div>
            <a href="@row.link">
                <div class="gameTitle">
                    <span style="color:#ff0000">今日排名：@row.rank</span>
                    <span>遊戲名稱：@row.name</span>
                    @if (row.price != 0)
                    {
                        <span>遊戲原價：NT$ @row.price</span>
                    }
                    else
                    {
                        <span>遊戲原價：免費</span>
                    }                    
                    @if (row.sale != 0)
                    {
                        <span>遊戲特價：NT$ @row.sale</span>
                    }
                    else
                    {
                        <span>遊戲特價：無</span>
                    }
                </div>
            </a>
            <div class="stop"></div>
        }
    }
    else
    {
        <div style="text-align: center;">
            <h2>等待資料更新</h2>
            <div class="waiting">
                <img src="/img/loading.gif">
                <br />
                <img src="/img/waiting.png">
            </div>
        </div>
    }
</div>

<div class="pageNumber" >
@Html.PagedListPager(Model, page => Url.Action("GetDataToday", new {tableName = ViewData["tableName"], page}))
</div> 