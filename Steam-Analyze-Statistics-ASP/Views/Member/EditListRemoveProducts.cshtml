@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<ProductInfo>;

@{
    Layout = "_Member";
}

<div>
    <div class="seftTopicHead">

        <div class="seftTopicTitle" style="width:25%"><span>商品名稱</span></div>
        <div class="seftTopicTitle" style="width:25%"><span>是否上架</span></div>
        <div style="clear:both"></div>
    </div>
    <form >
    @foreach (var row in Model)
    {        
        <div class="seftTopicContent">
            
                <div style="margin-bottom:1vh">
                    <div class="seftTopicTitle" style="width:25%"><span>@row.name</span></div>
                
                    <div class="seftTopicTitle" style="width:25%"><input type="checkbox" name="status" /></div>
                    
                    <div style="clear:both"></div>
                </div>
            
        </div>
    }
        <div class="seftTopicTitle" ><button type="submit">確定</button></div>
    </form>
    
</div>

@if (Model.Count > 0)
{
    <div class="pageNumber">
        @Html.PagedListPager(Model, page => Url.Action("SelfOrder", new { page }))
    </div>
}
