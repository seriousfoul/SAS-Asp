@model Steam_Analyze_Statistics_ASP.Models.UserInfo

@{
    ViewData["Title"] = "修改會員資料";
    Layout = "~/Views/Shared/_Member.cshtml";
    var data = ViewBag.data;
}

@if (TempData["Message"] != null && TempData["Message"] != "")
{
    <script>
        alert(@Html.Raw(Json.Serialize(@TempData["Message"])));
        location.reload();
    </script>

    TempData["Message"] = "";
}

<h1>修改會員資料</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" asp-controller="Member">
            <div asp-validation-summary="None" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label">姓名</label>
                <input asp-for="name" class="form-control" value="@data.name" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="email" class="control-label">信箱</label>
                <input asp-for="email" class="form-control" value="@data.email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="phone" class="control-label">電話</label>
                <input asp-for="phone" class="form-control" value="@data.phone" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">性別</label>
                <br />
                <label name="sex" class="control-label">男</label>
                <input type="radio"  name="sex" id="male" value="1" checked />
                <label name="sex" class="control-label">女</label>
                <input type="radio"  name="sex" id="female" value="0" />
            </div>

            <div class="form-group">
                <label class="control-label">生日</label>
                <br />
                <select name="year" style="color:#000000">
                    @for(int i = DateTime.Now.Year - 80; i <= DateTime.Now.Year; i++)
                    {
                        @if (Int32.Parse(data.year) == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
                <label name="year" class="control-label">年</label>

                <select name="month" style="color:#000000">
                    @for (int i = 1; i <= 12; i++)
                    {
                        @if (Int32.Parse(data.month) == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
                <label name="month" class="control-label">月</label>

                <select name="day" style="color:#000000">
                    @for (int i = 1; i <= 31; i++)
                    {
                        @if (Int32.Parse(data.day) == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
                <label name="day" class="control-label">日</label>                
            </div>

            <div class="form-group">
                <label asp-for="address" class="control-label">地址</label>
                <input asp-for="address" class="form-control" value="@data.address" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" id="stn"  class="btn btn-primary">修改</button>
                <button type="button" onclick="window.history.go(-1);" class="btn btn-primary">取消</button>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
